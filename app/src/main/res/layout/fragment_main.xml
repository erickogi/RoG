<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/colorAccent"
    android:background="@color/colorAccent"
    android:orientation="vertical"


    >

    <android.support.v7.widget.CardView
        android:id="@+id/todays_thought"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_weight="2"
        android:elevation="3dp"

        android:padding="0dp"
        app:cardCornerRadius="3dp">
        <!--app:cardUseCompatPadding="true"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/todays_thought_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/ic_import_contacts_black_24dp"
                    android:backgroundTint="@color/colorAccent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/todays_thought_image"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/todays_thought_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:paddingTop="6dp"
                        android:text="God's Grace Is Suffucient"
                        android:textColor="@color/blacktext" />

                    <TextView
                        android:id="@+id/todays_thought_preview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="6dp"
                        android:text="His grace is not only amazing, it is 'sufficient'. It is enough" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_click"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:text=" Read Today's pastors Message" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/ic_chevron_right_black_24dp" />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:background="@color/line" />
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_marginBottom="50dp"
        android:background="@color/colorAccent"
        android:id="@+id/menu_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/todays_thought"

        android:elevation="3dp"

        android:padding="0dp"
        app:cardCornerRadius="3dp"
        tools:targetApi="lollipop">
        <!--app:cardUseCompatPadding="true"-->
        <!--<android.support.v4.widget.NestedScrollView-->
            <!--android:background="@color/colorAccent"-->
            <!--android:id="@+id/scrollView"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent">-->

            <LinearLayout
                android:background="@color/colorAccent"
                android:backgroundTint="@color/colorAccent"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:orientation="vertical">

            <!--android:background="@drawable/churchlogo"-->

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:orientation="horizontal">

                    <!--android:background="@color/colorAccent"-->
                    <android.support.v7.widget.CardView
                        android:id="@+id/openSermons"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight="1"
                        android:elevation="3dp"
                        android:padding="0dp"
                        app:cardCornerRadius="3dp"
                        app:cardUseCompatPadding="true"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_subject_black_24dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:text="Sermons"
                                android:textAlignment="center"
                                android:textColor="@color/blacktext" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/openHyms"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight="1"
                        android:elevation="3dp"
                        android:padding="0dp"
                        app:cardCornerRadius="3dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_library_music_black_24dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:text="Hymns \Songs"
                                android:textAlignment="center"
                                android:textColor="@color/blacktext" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/openServicesShedules"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight="1"
                        android:elevation="3dp"
                        android:padding="4dp"
                        app:cardCornerRadius="3dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_view_day_black_24dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:text="Services"
                                android:textAlignment="center"
                                android:textColor="@color/blacktext" />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:orientation="horizontal">


                    <android.support.v7.widget.CardView
                        android:id="@+id/openBible"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"


                        android:layout_weight="1"
                        android:elevation="3dp"
                        android:padding="0dp"
                        app:cardCornerRadius="3dp"
                        app:cardUseCompatPadding="true"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_chrome_reader_mode_black_24dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:text="Bible"
                                android:textAlignment="center"
                                android:textColor="@color/blacktext" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/openAppointment"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight="1"
                        android:elevation="3dp"
                        android:padding="0dp"
                        app:cardCornerRadius="3dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_today_black_24dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:text="Appointment"
                                android:textAlignment="center"
                                android:textColor="@color/blacktext" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/openPrayer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight="1"
                        android:elevation="3dp"
                        android:padding="4dp"
                        app:cardCornerRadius="3dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_redeem_black_24dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:text="Prayers"
                                android:textAlignment="center"
                                android:textColor="@color/blacktext" />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"

                    android:orientation="horizontal">


                    <android.support.v7.widget.CardView
                        android:id="@+id/openDepartments"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"


                        android:layout_weight="1"
                        android:elevation="3dp"
                        android:padding="0dp"
                        app:cardCornerRadius="3dp"
                        app:cardUseCompatPadding="true"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_view_module_black_24dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:text="Departments"
                                android:textAlignment="center"
                                android:textColor="@color/blacktext" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/openChats"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight="1"
                        android:elevation="3dp"
                        android:padding="0dp"
                        app:cardCornerRadius="3dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_people_black_24dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:text="Connect"
                                android:textAlignment="center"
                                android:textColor="@color/blacktext" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/openAbout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight="1"
                        android:elevation="3dp"
                        android:padding="4dp"
                        app:cardCornerRadius="3dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_account_balance_wallet_black_24dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:text="Give"
                                android:textAlignment="center"
                                android:textColor="@color/blacktext" />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                </LinearLayout>

            =
            </LinearLayout>
        <!--</android.support.v4.widget.NestedScrollView>-->

    </android.support.v7.widget.CardView>


</RelativeLayout>